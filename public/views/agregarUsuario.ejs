<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agregar Usuario</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body class="bg-gray-100 text-gray-800 font-sans">

  <div class="max-w-4xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-center">Agregar Usuario</h1>

    <!-- Formulario -->
    <form action="/agregarUsuario" method="POST" class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <input type="text" name="id" placeholder="ID del usuario" required class="p-2 border border-gray-300 rounded">
      <input type="text" name="nombre" placeholder="Nombre del usuario" required class="p-2 border border-gray-300 rounded">
      <input type="number" name="edad" placeholder="Edad del usuario" required class="p-2 border border-gray-300 rounded col-span-2">

      <button type="submit" style="background-color: #c6a16f;" class="col-span-2 text-white py-2 px-4 rounded hover:opacity-90 font-semibold mt-2">
        <i class="fas fa-user-plus mr-2"></i>Agregar usuario
      </button>
    </form>

    <!-- Tabla -->
    <h2 class="text-xl font-semibold mt-10 mb-4">Usuarios Registrados</h2>
    <div class="overflow-x-auto">
      <table class="w-full table-auto border-collapse border border-gray-300">
        <thead class="text-white" style="background-color: #4f8f6c">
          <tr>
            <th class="px-4 py-2 text-left">ID</th>
            <th class="px-4 py-2 text-left">Nombre</th>
            <th class="px-4 py-2 text-left">Edad</th>
          </tr>
        </thead>
        <tbody>
          <% usuarios.forEach(usuario => { %>
            <tr class="border-t">
              <td class="px-4 py-2"><%= usuario.id %></td>
              <td class="px-4 py-2"><%= usuario.nombre %></td>
              <td class="px-4 py-2"><%= usuario.edad %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- BotÃ³n volver -->
    <div class="mt-6 text-center">
      <a href="/" class="inline-block text-white px-4 py-2 rounded hover:opacity-90" style="background-color: #833a2e;">
        <i class="fas fa-arrow-left mr-2"></i>Volver al inicio
      </a>
    </div>
  </div>

</body>
</html>
